@model LibroDTO
@{
    ViewBag.Title = "Detalle";
}

<div style="margin:40px;">
    <h1>Detalle Libro </h1>
    <hr />

    <div class="form-group">
        <label>ID: </label>
        @Model.IdLibro
    </div>
    <div class="form-group">
        <label>Titulo: </label>
        @Model.Titulo
    </div>
    <div class="form-group">
        <label>Año: </label>
        @Model.Año
    </div>
    <div class="form-group">
        <label>Genero: </label>
        @Model.Genero
    </div>
    <div class="form-group">
        <label>Num Paginas: </label>
        @Model.NumeroPaginas
    </div>
    <div class="form-group">
        <label>ID Autor: </label>
        @Model.IdAutor
    </div>
    
    <div class="form-group">
        <a href="@Url.Action("Index","Libro")">Regresar</a>
    </div>

    <a href="@Url.Action("Actualizar","Libro", new { id= Model.IdLibro})" class="btn btn-success right">Actualizar</a>
    <a href="@Url.Action("Eliminar","Libro", new { id= Model.IdLibro})" class="btn btn-danger right">Eliminar</a>
</div>

